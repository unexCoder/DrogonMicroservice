{
  "app": {
    "threads_num": 4,
    "max_connections": 1024,
    "client_max_body_size": 10000000,
    "upload_path": "./uploads"
  },

  "listeners": [
    {
      "address": "0.0.0.0",
      "port": 80,
      "https": false
    },
    {
      "address": "0.0.0.0",
      "port": 443,
      "https": false
    }
  ],

  "db_clients": [
    {
      "name": "default",
      "rdbms": "mysql",
      "host": "DB_HOST",
      "port": "DB_PORT",
      "dbname": "DB_NAME",
      "user": "DB_USER",
      "passwd": "DB_PASSWORD",
      "connection_number": "DB_POOL_SIZE",
      "auto_batch": "on"
    }
  ],

  "log": {
    "level": "INFO"
  }
}
